<Window x:Class="WpfOefening_Bioscoop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOefening_Bioscoop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="Window" Loaded="Window_Loaded">
        <TextBox x:Name="TxtNormaal" HorizontalAlignment="Left" Margin="280,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtPrijsTeBetalen" HorizontalAlignment="Left" Margin="280,302,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtStudent" HorizontalAlignment="Left" Margin="280,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtKorting" HorizontalAlignment="Left" Margin="280,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Normaal tarief" HorizontalAlignment="Left" Margin="76,119,0,0" VerticalAlignment="Top" Width="125"/>
        <Label Content="Studententarief" HorizontalAlignment="Left" Margin="76,229,0,0" VerticalAlignment="Top" Width="125"/>
        <Label Content="Kortingstarief" HorizontalAlignment="Left" Margin="76,179,0,0" VerticalAlignment="Top" Width="125"/>
        <Label Content="Prijs te betalen" HorizontalAlignment="Left" Margin="76,293,0,0" VerticalAlignment="Top" Width="125"/>
        <Button IsDefault="true" x:Name="BtnBerekenen" Content="Berekenen" HorizontalAlignment="Left" Margin="472,160,0,0" VerticalAlignment="Top" Height="24" Width="99" Click="BtnBerekenen_Click" DragEnter="BtnBerekenen_DragEnter"/>
        <Button x:Name="BtnAfsluiten" Content="Afsluiten" HorizontalAlignment="Left" Margin="472,276,0,0" VerticalAlignment="Top" Height="24" Width="99" Click="BtnAfsluiten_Click"/>
        <Button x:Name="BtnWissen" Content="Wissen" HorizontalAlignment="Left" Margin="472,221,0,0" VerticalAlignment="Top" Height="24" Width="99" Click="BtnWissen_Click"/>
        <Label Content="Geef aantal tickets per soort in:" HorizontalAlignment="Left" Margin="76,54,0,0" VerticalAlignment="Top" Height="30" Width="324" FontWeight="Bold" FontSize="16"/>

    </Grid>
</Window>
